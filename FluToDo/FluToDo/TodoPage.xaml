<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FluToDo.TodoPage">

  <ContentPage.ToolbarItems>
    <ToolbarItem Name="Log Out" Command="{Binding NewItemCommand}" Order="Primary" Priority="0">
      <ToolbarItem.Icon>
        <OnPlatform x:TypeArguments="FileImageSource"
                    Android="icon.png" />
      </ToolbarItem.Icon>
    </ToolbarItem>
  </ContentPage.ToolbarItems>

  <StackLayout>
  <ListView x:Name="listview" IsPullToRefreshEnabled="true">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <ViewCell.ContextActions>
            <MenuItem Clicked="OnChangeStatus" CommandParameter="{Binding .}"
               Text="Change Status" />
            <MenuItem Clicked="OnDelete" CommandParameter="{Binding .}"
               Text="Delete" IsDestructive="True" />
          </ViewCell.ContextActions>
          <StackLayout Orientation="Horizontal" Padding="15,0">
            <Label Text="{Binding Name}" />
            <Image Source="icon.png" HorizontalOptions="EndAndExpand" IsVisible="{Binding IsComplete}" />
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
  </StackLayout>
</ContentPage>